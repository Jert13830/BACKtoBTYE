{% extends "/layouts/base.twig" %}

{% block style %}
	<title>Registration</title>
	<link rel="stylesheet" href="/assets/css/home.css">
{% endblock %}

{% block main %}
	<main>
    <div id="pageContainer">
		<section id="registrySection">
			<div id="registration">
				{% embed '/partials/window.twig' with {
   					 	windowType: 'mediumWindow',
    					title: 'Registration',
    					showPlus: 0,
						showClose : 0,
						pageId: 'registration'
					} %}
					{% block content %}
						{% include '/partials/registrationForm.twig' %}
					{% endblock %}
				{% endembed %}
			</div>
		</section>
    </div>
	<section id="addUserRoleSection">
		<dialog id="userRoleForm" class="dialog">
				{% embed '/partials/window.twig' with {
   					 	windowType: 'smallWindow',
    					title: 'User Role',
    					showPlus: 0,
						showClose : 1,
						pageId: 'userRoleForm'
					} %}
					{% block content %}
						{% include '/partials/userRoleForm.twig' %}
					{% endblock %}
				{% endembed %}

			</dialog>
		</section>
	</main>
{% endblock %}
