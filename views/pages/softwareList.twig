{% extends "/layouts/base.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/computerList.css">
	<title>Software List</title>
{% endblock %}
{% block main %}
	<main>
		<div id="pageContainer">
			<section>
				<div id="softwareList">
					{% embed '/partials/window.twig' with {
						windowType: 'largeWindow',
						title: 'Software',
						showPlus: 1,
						showSearch: 0,
						pageId: 'softwareList'
						} %}
						{% block content %}
							{% include '/partials/softwareListGrid.twig' %}
						{% endblock %}
					{% endembed %}
				</div>
			</section>
		</div>
		<section id="searchComputerSection">
			<dialog id="searchComputer" class="dialog">
				<div id="searchBarContent">
					<button class="squareBtnClose" type="button">
						<span class="closeBtn">Ã—</span>
					</button>
					<form id="searchForm" method="post" action="/filterComputers" >
						<div id="searchGrid">
							<div id="searchBarDiv">
								<input type="search" id="searchBar" name="searchBar"/>
								<button id="btnResearch">Search</button>
							</div>
							<div>
								<fieldset>
									<div>
										<input type="radio" id="manufacturer" name="selection" value="manufacturer" checked/>
										<label for="manufacturer">Manufacturer</label>
										<input type="radio" id="year" name="selection" value="year"/>
										<label for="year">Year</label>
									</div>
								</fieldset>
							</div>
						</div>
					</form>
				</div>
			</div>
		</dialog>
	</section>
</main>{% endblock %}{% block scripts %}
{{ parent() }}{% endblock %}
