{% block style %}
	<link rel="stylesheet" href="/assets/css/computerForm.css">
{% endblock %}

<div class="formBk1">
	<div class="formBk2">
		<form id="computerForm" action="/addComputer" method="post">
			<div id="formDiv">
				<div id="formLeft">
					<div class="formInputLine">
						<div class="manuLogoHolder">
							<div>
								<img id="computerManuLogo" src="/assets/images/logos/defaultLogo.webp" alt="Computer Manufacturer's logo">
							</div>
						</div>
						<div class="errNinput">
							<input type="text" name="computer" id="computer" placeholder="Computer" required value="{{ data.computer|default('') }}"/>
							<div>
								<p id="computerNameErrors">{{errors.computerName}}</p>
							</div>
						</div>
					</div>

					<div class="formInputLine" id="manuName">
						<div>
							<label for="computerManuName">Manufacturer:</label>
						</div>
						<div>
							<select id="computerManufacturerSelect" name="fabricantId" onchange="changeLogo();" required value="{{ data.fabricantId|default('') }}"></select>

							<span class="plus-label" id="addComputerManu">
								<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewbox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M440-280h80v-160h160v-80H520v-160h-80v160H280v80h160v160Zm40 200q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"/></svg>
							</span>
						</div>
						<div>
							<p id="manufacturerErrors"></p>
						</div>
					</div>

					<div class="formInputLine">
						<label for="manufacturerYear">Year</label>
						<input type="number" min="1970" max="2000" step="1" id="manufacturerYear" name="manufacturerYear" required value="{{ data.manufacturerYear|default('1980') }}"/>
					</div>

					<div class="formInputLine">
						<label for="cpuType">CPU type</label>
						<div><input type="number" min="4" max="16" step="1" id="cpuType" name="cpuType" required value="{{ data.cpuType|default('8') }}"/>
							<span>
								bit</span>
						</div>
					</div>

					<div class="errNinput">
						<div class="formInputLine">
							<label for="cpu">CPU</label>
							<input type="text" name="cpu" id="cpu" required value="{{ data.cpu|default('') }}"/>
						</div>
						{% if errors.cpu %}
							<p>{{errors.cpu}}</p>
						{% endif %}
					</div>

					<div class="formInputLine">
						<label for="clockSpeed">Clock speed</label>
						<div><input type="number" min="1" max="20" step="1" id="clockSpeed" name="clockSpeed" required value="{{ data.clockSpeed|default('4') }}"/><span>
								MHz</span>
						</div>
					</div>

					<div class="formInputLine">
						<label for="ram">RAM</label>
						<div><input type="number" min="1" max="1024" step="1" id="ram" name="ram" required value="{{ data.ram|default('64') }}"/><span>
								K</span>
						</div>
					</div>

					<div class="formInputLine">
						<label for="ram">ROM</label>
						<div><input type="number" min="1" max="1024" step="1" id="rom" name="rom" value="{{ data.rom|default('32') }}" required/><span>
								K</span>
						</div>
					</div>
					<div class="errNinput">
						<div class="formInputLine">
							<label for="graphics">Graphics</label>
							<input type="text" name="graphics" id="graphics" required value="{{ data.graphics|default('') }}"/>
						</div>

						{% if errors.graphics %}
							<p>{{errors.graphics}}</p>
						{% endif %}
					</div>

					<div class="formInputLine">
						<label for="nbColours">N° Colours</label>
						<input type="number" min="1" max="100000" step="1" id="nbColours" name="nbColours" value="{{ data.nbColours|default('256') }}" required/>
					</div>

					<div class="errNinput">
						<div class="formInputLine">
							<label for="sound">Sound</label>
							<input type="text" name="sound" id="sound" required value="{{ data.sound|default('') }}"/>
						</div>
						{% if errors.sound %}
							<p>{{errors.sound}}</p>
						{% endif %}
					</div>

					<div class="errNinput">
						<div class="formInputLine">
								<label for="successor">Successor</label>
								<select id="successor" name="successor" value="{{ data.successor|default('0') }}"></select>
						</div>
						
							<p id="successorErrors"></p>
					</div>
				</div>
				<div id="formRight">
					<div id="computerPhotoHolder">
						<div id="computerProfileIamge">
							<img id="computerPhoto" src="/assets/images/computers/defaultComputer.webp" alt="Computer image">
							<label for="filePath" class="camera-label">
								<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewbox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M480-260q75 0 127.5-52.5T660-440q0-75-52.5-127.5T480-620q-75 0-127.5 52.5T300-440q0 75 52.5 127.5T480-260Zm0-80q-42 0-71-29t-29-71q0-42 29-71t71-29q42 0 71 29t29 71q0 42-29 71t-71 29ZM160-120q-33 0-56.5-23.5T80-200v-480q0-33 23.5-56.5T160-760h126l74-80h240l74 80h126q33 0 56.5 23.5T880-680v480q0 33-23.5 56.5T800-120H160Zm0-80h640v-480H638l-73-80H395l-73 80H160v480Zm320-240Z" fill="currentColor"/></svg>
							</span>
						</label>
						<input type="file" accept="image/jpeg, image/png, image/jpg, image/webp" id="filePath" class="computerImage" hidden>
					</div>
				</div>

				<div id="computerInformation">
					<div class="textBk1">
						<textarea id="computerInfo" name="computerInfo" rows="10" cols="50" placeholder="Computer Information" value="{{ data.computerInfo|default('') }}"></textarea>
					</div>
				</div>
				<div id="scoringBtn">
					<div id="rarity">
						<div>
							<p>Rarity</p>
						</div>
						<input type="hidden" name="rarityRating" value="">
						<div class="stars">
							<ul id="rarityStars">
								<li>★</li>
								<li>★</li>
								<li>★</li>
								<li>★</li>
								<li>★</li>
							</ul>
						</div>
					</div>
					<div id="popularity">
						<div>
							<p>Popularity</p>
						</div>
						<input type="hidden" name="popularityRating" value="">
						<div class="stars">
							<ul id="popularityStars">
								<li>★</li>
								<li>★</li>
								<li>★</li>
								<li>★</li>
								<li>★</li>
							</ul>
						</div>
					</div>
				</div>
				<div>
					<div class="formBtnDiv">
						<div>
							<button class="btnForm" type="submit" id="addComputerSubmit" name="addComputerSubmit">Add</button>
						</div>
						<div>
							<button class="btnForm" type="reset" id="btnReset" value="reset">Reset</button>

						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div></div>
