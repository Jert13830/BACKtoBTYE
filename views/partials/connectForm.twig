<div id="connectFormDiv">
	<form id="connectForm" action="{{ user ? '/userLogout' : '/connect' }}" method="post">

		{% if not user %}
			<div class="connectFormInput">
				<label for="email">Email :</label>
				<input type="email" name="email" id="email" required placeholder="Email address"/>
				{% if errors.email %}
					<p>{{ errors.email }}</p>
				{% endif %}
			</div>

			<div class="connectFormInput">
				<label for="password">Password :</label>
				<input type="password" name="password" id="password" required placeholder="6+ characters"/>
				{% if errors.password %}
					<p class="error">{{ errors.password }}</p>
				{% endif %}
			</div>
		{% endif %}

		<div id="submitBtnDiv">
			{% if user %}
				<button class="connectSubmit"  type="submit">Log out</button>
			{% else %}
				<div id="actionBtn">
					<button class="connectSubmit" id="connectSubmit" type="submit">Connect</button>

					<button type="submit" class="btnLink" formaction="/resetPassword" formmethod="POST" formnovalidate>
						Password forgotten
					</button>
				</div>
			{% endif %}
		</div>

		{% if errors.connection %}
			<p class="error">{{ errors.connection }}</p>
		{% endif %}

		{% if not user %}
			<p class="connectP">
				You are not registered,
				<a id="connectA" href="/register">please register</a>
			</p>
		{% else %}
			<p class="connectP">
				<a id="connectA" href="/updateUser/{{user.id}}">Edit your profile</a>
			</p>
		{% endif %}

	</form>
</div>
