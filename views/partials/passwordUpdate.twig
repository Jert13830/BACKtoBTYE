{% block style %}
	<link rel="stylesheet" href="/assets/css/registry.css">
{% endblock %}

<div id="connectFormDiv">

	<form id="updatePasswordForm" method="post" action="/updateForgottenPassword">
		<input type="hidden" name="utilisateurId" value={{tokenUser.utilisateurId}}>
		<div id="passwordGrid">
			<div id="updateBarDiv">
				<div><input class="updatePasswordText" type="password" id="newPassword" required pattern="^(?=.*?[0-9])(?=.*?[A-Za-z]).{6,}$" name="newPassword" placeholder="New password">
				</div>

				<div><input class="updatePasswordText" type="password" id="confirmPassword" required pattern="^(?=.*?[0-9])(?=.*?[A-Za-z]).{6,}$" name="confirmPassword" placeholder="Confirm password">
				</div>

				<div>
					{% if errors.password %}
						<p class="errP">{{errors.password}}</p>
					{% endif %}
				</div>
				<div>
					<button id="btnUpdatePassword">Update</button>
				</div>
			</div>
		</div>
	</form>
</div>
