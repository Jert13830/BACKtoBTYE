<section>
	<div class="table-container" id="userDetailsList">
		<table>
			<thead>
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th>Role</th>
					<th class="role-column">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users%}
					<tr class="userLine">
						<td>{{user.pseudo}}</td>
						<td>{{user.email}}</td>
						<td>{{user.roleUtilisateurs[0].role.role}}</td>
						<td class="action-column">
							<form method="post" action="/updateUserList">
								<button class="btnForm" id="btnModify" name="buttons" value="modify-{{user.id_utilisateur}}" onclick="clearFormState('registrationForm')">âœï¸</button>
								<button class="btnForm" id="btnDelete" name="buttons" value="delete-{{user.id_utilisateur}}">ğŸ—‘ï¸</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div id="closeDiv">
		{% if errors.userError %}
				<p>{{errors.userError}}</p>
		{% endif %}
		<div class="actionBtn">
		<button type="button" class="btnForm" onclick="window.location.href='/newRegister'">
				New
			</button>
			<button type="button" class="btnForm" onclick="window.location.href='/register'">
				Close
			</button>
		</div>
	</div>
</section>
